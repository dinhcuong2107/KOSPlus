<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#00FFFFFF">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/custom_background_border"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteX="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_background_button_cancel"
                android:src="@drawable/rounded_close_24"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/color_title"
                android:text="Chi tiết sản phẩm"/>

            <ImageButton
                android:id="@+id/favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="#FFEB3B"
                android:background="@drawable/custom_background_button_cancel"
                android:src="@drawable/rounded_star_24"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:padding="5dp"
            app:strokeColor="@color/color_a"
            app:strokeWidth="2dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="10dp"
            tools:ignore="MissingConstraints"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="sản phẩm"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/color_title"/>
            <TextView
                android:id="@+id/star"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:drawableTint="#FFEB3B"
                android:drawableStart="@drawable/rounded_star_24"
                android:text="10"/>
        </LinearLayout>
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="status"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"/>
            <TextView
                android:id="@+id/promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="5%"
                android:textStyle="bold"
                android:textColor="#E91E63"/>
            <TextView
                android:id="@+id/promotion_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status-promotion"
                android:textColor="#E91E63"/>
        </LinearLayout>

        <TextView
            android:id="@+id/final_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="price"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: "/>
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category: "/>
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"/>
        </LinearLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:text="Thêm vào giỏ hàng"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/color_title"
            android:background="@drawable/custom_background_button_cancel"
            android:textAllCaps="false" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/promotiondisconnect"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:text="Ngừng khuyến mãi"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/color_title"
            android:background="@drawable/custom_background_button_cancel"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/promotionconnect"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:text="Gắn khuyến mãi"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/color_title"
            android:background="@drawable/custom_background_button_cancel"
            android:textAllCaps="false" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fix"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:text="Sửa"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/color_title"
            android:background="@drawable/custom_background_button_cancel"
            android:textAllCaps="false"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>