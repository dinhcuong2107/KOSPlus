<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="settingFragment"
            type="com.example.kosplus.fragment.SettingFragmentVM" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/custom_background_button_cancel"
                android:layout_margin="10dp"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:strokeColor="@color/color_a"
                    app:strokeWidth="2dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="100dp"
                    tools:ignore="MissingConstraints"
                    android:layout_marginLeft="4dp">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@{settingFragment.users.imageUrl}"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="@={settingFragment.users.fullname}"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={settingFragment.users.role}"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="3dp"
                    app:cardCornerRadius="100dp"
                    tools:ignore="MissingConstraints"
                    android:layout_marginRight="4dp">
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/imageQR"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="@{(view) -> settingFragment.onShowQR(view)}"
                        android:src="@drawable/ani_qrcode"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">
                <!-- Tiêu đề -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Thông tin cá nhân"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Mục Hồ sơ cá nhân -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:onClick="@{(view) -> settingFragment.onEditProfile(view)}">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_profile" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Hồ sơ cá nhân"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Mục Tài khoản ngân hàng -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:onClick="@{(view) -> settingFragment.onWallet(view)}"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_money" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Tài khoản ngân hàng"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_shopping_cart" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Giỏ hàng"
                        android:onClick="@{(view) -> settingFragment.onCartsManage(view)}"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="@{settingFragment.users.role.equals(`Customer`) ? View.VISIBLE : View.GONE}"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_shopping_list" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Đơn hàng của tôi"
                        android:onClick="@{(view) -> settingFragment.onOrderManage(view)}"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:visibility="@{settingFragment.users.role.equals(`Customer`) ? View.GONE : View.VISIBLE}"
                android:orientation="vertical">
                <!-- Tiêu đề -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Quản lý thương hiệu (Store)"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{(view) -> settingFragment.onProductsManage(view)}"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_fastfood" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Quản lý sản phẩm"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_shopping_list" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Quản Lý đơn hàng"
                        android:onClick="@{(view) -> settingFragment.onOrderManage(view)}"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{settingFragment.users.role.equals(`Admin`) ? View.VISIBLE : View.GONE}"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:onClick="@{(view) -> settingFragment.onShopsManage(view)}"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_store" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Quản Lý cửa hàng"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="@{settingFragment.users.role.equals(`Admin`) || settingFragment.users.role.equals(`Manager`) ? View.VISIBLE : View.GONE}"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_chart" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Thống kê bán hàng"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:onClick="@{(view) -> settingFragment.onSalesSummary(view)}"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:visibility="@{settingFragment.users.role.equals(`Customer`) ? View.GONE : View.VISIBLE}"
                android:orientation="vertical">
                <!-- Tiêu đề -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Tiện ích"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="@{settingFragment.users.role.equals(`Admin`) || settingFragment.users.role.equals(`Manager`) ? View.VISIBLE : View.GONE}"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:onClick="@{(view) -> settingFragment.onCheckInCode(view)}"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_qrcode" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Quản Lý CheckInCode"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{(view) -> settingFragment.onCheckInScanner(view)}"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_scan" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Check in"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:visibility="@{settingFragment.users.role.equals(`Customer`) ? View.GONE : View.VISIBLE}"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="Quản lý"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{(view) -> settingFragment.onUsersManage(view)}"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_profile" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Quản lý khách hàng"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="@{settingFragment.users.role.equals(`Admin`) || settingFragment.users.role.equals(`Manager`) ? View.VISIBLE : View.GONE}"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:onClick="@{(view) -> settingFragment.onNotificationsManage(view)}"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_notification" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Quản lý thông báo"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{settingFragment.users.role.equals(`Admin`) || settingFragment.users.role.equals(`Manager`) ? View.VISIBLE : View.GONE}"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{(view) -> settingFragment.onPromotionsManage(view)}"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_reduce" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Quản lý khuyến mãi"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="@{settingFragment.users.role.equals(`Admin`) || settingFragment.users.role.equals(`Manager`) ? View.VISIBLE : View.GONE}"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:onClick="@{(view) -> settingFragment.onBannersManage(view)}"
                    android:padding="6dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ani_ads" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="Quản lý chương trình quảng cáo"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:onClick="@{(view) -> settingFragment.onLogOut(view)}"
                android:orientation="horizontal"
                android:padding="18dp">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ani_logout" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:text="Đăng xuất"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>
</layout>